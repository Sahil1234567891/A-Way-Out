#include<stdio.h>
#include<stdlib.h>

typedef struct map {
    int value;
    struct map* left;
    struct map* right;
} map;

map* add(int value) {
    map* branch = (map*)malloc(sizeof(map));
    if (branch == NULL) {
        printf("Memory allocation failed.\n");
        exit(1);
    }
    branch->value = value;
    branch->left = branch->right = NULL;
    return branch;
}

map* construct() {
    map* root = add(0);
    root->left = add(1);
    root->right = add(2);
    root->left->left = add(3);
    root->left->right = add(4);
    root->right->left = add(5);
    root->right->right = add(6);
    root->left->left->left = add(7);
    root->left->left->right = add(8);
    root->left->right->left = add(9);
    root->left->right->right = add(10);
    root->right->left->left = add(11);
    root->right->left->right = add(12);
    root->right->right->left = add(13);
    root->right->right->right = add(14);
    return root;
}
void goleft(){

}
void goright(){
}
void goback(int back){
    if (back<20){
        back++;

    }
    else
        printf("you have used up all you back moves recklessly!! NOW SUFFEER(either continue or restart)" );
}

void playmove(char move,int back){
    if (move='a'){
        goleft();
    }
    if (move='d'){
        goright();
    }
    if (move='s'){
        goback(back);
    }
    
}
