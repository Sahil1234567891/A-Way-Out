#include<stdio.h>
#include<stdlib.h>

typedef struct map {
    char *clue;
    struct map* left;
    struct map* right;
} map;


map *add(char *clue) {
    map* branch = (map*)malloc(sizeof(map));
    if (branch == NULL) {
        printf("fail\n");
        exit(1);
    }
    branch->clue = clue;
    branch->left = branch->right = NULL;
    return branch;
}

